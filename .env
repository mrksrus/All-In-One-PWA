# JWT Secrets (generate random strings - use: openssl rand -hex 32)
JWT_SECRET=change-this-to-a-random-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=change-this-to-another-random-secret-key-minimum-32-characters

# Encryption key for email passwords (32 characters)
ENCRYPTION_KEY=default-encryption-key-change-in-production-32-chars!!

# CORS origin - set to your domain (include port if not using default)
CORS_ORIGIN=*

# Port Configuration
# Change these to use different ports on your host machine
# Format: HOST_PORT:CONTAINER_PORT
# - HOST_PORT: Port accessible from outside Docker (your server)
# - CONTAINER_PORT: Port inside the container (usually keep defaults)

# Backend ports
BACKEND_HOST_PORT=17988          # Host port for backend API (change this to avoid conflicts)
BACKEND_CONTAINER_PORT=3000     # Container port (usually keep as 3000)

# Frontend ports  
FRONTEND_HOST_PORT=18988           # Host port for frontend web app (change this to avoid conflicts)
FRONTEND_CONTAINER_PORT=80      # Container port (usually keep as 80)
